<h1 align="center"> Title: <%= @article.title %></h1>
<div class="card card-body bg-light">
  <% if @article.user %>
    <ul class="listing">
      <div class ="row center">
        <div class="col-md-12 col-md-offset-8">
          <li>Created By:</li>
          <li><%= link_to gravatar_for(@article.user),user_path(@article.user) %>   </li>
          <li class="article-title">
            <%= link_to @article.user.username,user_path(@article.user) %>
          </li> 
          <li><small><%= pluralize(@article.user.articles.count,"article") if @article.user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center "><strong>Description</strong></h4>
  <%= simple_format(@article.description) %>
  <div class="article_actions">
    <%= link_to "View all articles",articles_path, class: "btn btn-success btn-sm"%>
    <% if logged_in? && current_user == @article.user %>
      <%= link_to "delete article",article_path(@article), method: :delete, data:{confirm: "Are you sure to delete the article"}, class: "btn btn-sm btn-danger" %>
      <%= link_to "Edit article", edit_article_path(@article), class: "btn btn-primary btn-sm"%><% end %>
  </div>

  
</div>
